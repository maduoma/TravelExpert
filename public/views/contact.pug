  // create a fiorm for contact information
  h1 Contact Form
  .wrapper
    form(action='#' method='post')
      label(for='name') Full Name
      input#name(type='text' name='name' placeholder='Enter your full name')
      label(for='email') Email
      input#email(type='email' name='email' placeholder='Enter your email')
      label.full-width(for='message') Message
      textarea#message.full-width(name='message' placeholder='Enter your message')
      input.full-width(type='submit' name='submit' value='Send')
