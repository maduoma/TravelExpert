// Company Agencies and their details from database
div.agencies
  section.agents 
    h1 Agency 1
    table.box
      tr.head
        th= agencies[0].AgncyAddress+','
        th= agencies[0].AgncyCity
      br
      table
        for item in agentList1
          tr
            th= item.AgtFirstName
            th= item.AgtLastName
            th= item.AgtBusPhone
            th= item.AgtEmail

  section.agents 
    h1 Agency 2
